<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nextLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textFontWeight="700"
            android:text="@string/next_lecture" />

        <TextView
            android:id="@+id/nextLectureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray0"
            android:textSize="11sp"
            android:textFontWeight="700"
            android:text="@string/next_lecture_date_preview" />

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/circle"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_marginStart="4dp"
                android:id="@+id/nextLectureName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/gray0"
                android:textFontWeight="700"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/next_lecture_name_preview"/>
        </LinearLayout>

        <TextView
            android:id="@+id/nextLecturePlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/gray0"
            android:textFontWeight="400"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/next_lecture_place_preview"/>

        <TextView
            android:id="@+id/nextLectureProfessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/gray75"
            android:textFontWeight="500"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/next_lecture_professor_preview"/>
    </LinearLayout>
</RelativeLayout>